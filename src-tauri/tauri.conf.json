{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Anisto",
  "version": "0.1.7",
  "identifier": "com.anisto.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Anisto",
        "width": 1340,
        "height": 780,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "atlus-compiler/**/*",
      "tests/**/*"
    ]
  }
}
